    no-member,
    keyword-arg-before-vararg,
    too-many-ancestors,
    invalid-name,
    abstract-method,
    unused-argument,
    too-many-locals,
    consider-using-enumerate,
    no-self-use,
    no-else-return,
    inconsistent-return-statements
